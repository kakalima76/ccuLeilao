<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:id="@+id/Grupo" android:orientation="vertical">
    <EditText
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:inputType="textPersonName"
            android:text="@string/edittext_main_01"
            android:ems="10"
            android:id="@+id/editTExtLacre" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:autofillHints="" android:labelFor="@id/editTExtLacre" android:fontFamily="@font/cousine"
            app:layout_constraintHorizontal_bias="0.0"/>
    <Button
            android:text="@string/button_main_01"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:id="@+id/Buscar"
            app:layout_constraintTop_toBottomOf="@+id/editTExtLacre"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:background="@drawable/btn_style" android:textSize="30sp"
            android:fontFamily="@font/cousine" app:layout_constraintHorizontal_bias="0.0"/>
    <TextView
            android:text="@string/textview_main_01"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:id="@+id/Posicao"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:background="#87CEFA	"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/Processo" android:textAlignment="center"
            android:fontFamily="@font/cousine" android:textSize="24sp" android:textColor="#082208"/>
    <TextView
            android:text="@string/textview_main_01"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:id="@+id/Processo" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/Buscar" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:background="#87CEFA	" android:textAlignment="center"
            android:fontFamily="@font/cousine" android:textSize="24sp" android:textColor="#082208"/>
    <Spinner
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:id="@+id/ItensGrupo" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/Posicao" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fabSize="normal"
            android:src="@android:drawable/ic_menu_camera"
            android:layout_alignParentBottom="true"
            android:layout_margin="32dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/btn_style"
            app:backgroundTint="@android:color/white"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="176dp"
            android:layout_marginTop="116dp" app:layout_constraintTop_toBottomOf="@+id/ItensGrupo"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="323dp"
            android:backgroundTint="#2196F3"/>



</androidx.constraintlayout.widget.ConstraintLayout>